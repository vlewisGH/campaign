<!DOCTYPE html>
<html>
  <head>
    <title>Campaign</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= filestack_js_include_tag %>
    <%= filestack_js_init_tag %>
  </head>

  <body>
    <div class="nav bg-light">
        <div class="col-1">
          <div class="pt-2 pb-2"><%= link_to "Campaign", '/'%></div>
        </div>
        <% if current_user %>
          <div class="row col-11 flex justify-content-between">
            <div class="pt-2 pb-2 col-2"><%= link_to current_user.username.capitalize, user_path(current_user.id) %></div>
            <div class="pt-2 pb-2 col-2 text-right"><%= link_to "Log Out", login_path(current_user), method: "delete" %></div>
          </div>
        <% else %>
           <div class="row col-10 flex justify-content-end">
            <div class="pt-2 pb-2 col-1"><%= link_to "Login", login_path %></div>
            <div class="pt-2 pb-2 col-1"><%= link_to "Signup", new_user_path %></div>
          </div>
        <% end %>
    </div>
    <%= yield %>
  </body>
</html>
